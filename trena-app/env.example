# Trena App Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Keys (Required)
LUSHA_API_KEY=your_lusha_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
# OR use Anthropic instead of OpenAI
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security (Required)
CRON_SECRET=your_secure_random_string_here

# Site Configuration (Optional)
NEXT_PUBLIC_SITE_URL=https://trena.ai

# Lusha Configuration (Optional - defaults provided)
LUSHA_REFRESH_COOLDOWN_SECONDS=30
LUSHA_CACHE_HOURS=24

# Development Options (Optional)
# Set to true to use mock data instead of real API calls (useful for development)
LUSHA_USE_MOCK_DATA=false
